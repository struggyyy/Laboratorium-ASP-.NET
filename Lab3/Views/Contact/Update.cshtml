@model Contact

<h1>Edytuj kontakt</h1>
<form asp-controller="Contact" asp-action="Update" method="post">
    <input asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name">Imię</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone">Numer telefonu</label>
        <input class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>

    </div>

    <div class="mb-3">
        <label asp-for="Birth">Data urodzenia</label>
        <input class="form-control" asp-for="Birth" />
        <span class="text-danger" asp-validation-for="Birth"></span>
    </div>

    <div class="mb-3">
        <label>Organizacja</label>
        <select class="form-control" asp-for="OrganizationId" asp-items="@Model.OrganizationList"></select>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn-primary">Zapisz</button>
    </div>

</form>