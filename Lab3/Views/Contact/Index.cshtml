@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista Kontaktów</h1>

<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Utwórz kontakt</a>

<table class="table"
    <thead>
    <tr>
        <th>
            Imię
        </th>

        <th>
            Email
        </th>

        <th>
            Akcje
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
                <tr>
                    <td>
                    @item.Value.Name
                    </td>
                    <td>
                    @item.Value.Email
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Contact" asp-action="Update" asp-route-id=@item.Key>Edytuj</a>
                        <a class="btn btn-info" asp-controller="Contact" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>

                </tr>
        }

    </tbody>