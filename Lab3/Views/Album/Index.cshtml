@model Dictionary<int, Album>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista Albumów</h1>

<a class="btn btn-primary" asp-controller="Album" asp-action="Create">Utwórz album!</a>

<table class="table"
    <thead>
    <tr>
        <th>
            Nazwa albumu
        </th>

        <th>
            Zespół
        </th>

        <th>
            Akcje
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
                    <tr>
                        <td>
                    @item.Value.Name
                        </td>
                        <td>
                    @item.Value.Band
                        </td>
                        <td>
                            <a class="btn btn-info" asp-controller="Album" asp-action="Update" asp-route-id=@item.Key>Edytuj</a>
                            <a class="btn btn-success" asp-controller="Album" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                            <a class="btn btn-danger" asp-controller="Album" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                        </td>

                    </tr>
        }

    </tbody>